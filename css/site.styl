@import "fonts"
@import "resets"

// Grid of 12 90px columns with 16px gutter
// generated by https://github.com/patrickbest/css-gridgen-mystyle
$cols = 12
$col = 90px
$gutter = 16px
.container
  margin: 0 auto
  width: ($col * $cols)+($gutter * $cols)
.row
  clear: both
.col
  float: left
  margin-left: ($gutter/2)
  margin-right: ($gutter/2)
for col in 1..$cols
  .col{col}
    width: ( col * $col ) + ( ( col - 1 ) * $gutter )

// VARIABLES

$width-sidebar = 250px

$basic-animation-speed = 0.2s
$longer-animation-speed = 0.5s

$margin-small = ($gutter)
$margin-basic = ($gutter*2)
$margin-large = ($gutter*5)

$basic-post-height = 350px

$font-size-basic = 15px
$font-size-larger = 17px
$font-size-smaller = 13px
$font-leading-basic = 1.5em
$font-tracking-basic = 0.03em

$font-size-heading = 50px
$font-size-subheading = 30px

$color-soft-black = rgb(14,14,14)
$color-soft-white = rgb(253,253,253)

$color-light-gray = rgb(237,236,236)
$color-text-gray = rgb(129,126,126)

// TYPOGRAPHY

html, body
  font-family:"LLAkkuratProWeb-Light",helvetica,arial,sans-serif
  font-size: $font-size-basic
  line-height: $font-leading-basic
  letter-spacing: $font-tracking-basic

i, em, .font-italic
  font-family:"LLAkkuratProWeb-Lightitalic",helvetica,arial,sans-serif
  font-style: normal !important

.font-larger
  font-size: $font-size-larger
  line-height: $font-leading-basic
  letter-spacing: $font-tracking-basic

h1
  font-size: 43px
  -webkit-font-smoothing: antialiased

h2
  font-size: 2em
  -webkit-font-smoothing: antialiased

h3
  font-size: 1.5em

h1,h2,h3,h4,h5,h6
  line-height: $font-leading-basic
  font-weight: normal

p
  margin-bottom: 1em

.copy
  max-width: 650px

.highlight
  text-decoration: underline


// LINKS

a,a:active,a:visited
  color:inherit
  text-decoration: none
  transition:opacity $basic-animation-speed
  &:hover
    opacity:.5


// BASIC

html
  background-color: $color-soft-white
  color: $color-text-gray

img
  max-width: 100%
  height: auto


// UTILITY

.u-marginauto
  margin: 0 auto


// STRUCTURE

#sidebar
  width: $width-sidebar
  position: fixed
  z-index: 999
  top: 0
  left: 0
  height: 100%
  overflow-y: auto
  box-sizing: border-box
  padding: $margin-small
  background-color: $color-soft-white
  transition: transform $longer-animation-speed

#sidebar-toggle
  display: none
  transition: transform $longer-animation-speed
  path
    fill: $color-soft-white

#main-content
  padding-left: $width-sidebar

.header-left
  float: left
  width: 65%

.header-right
  float: left
  width: 35%
  box-sizing: border-box
  text-align: right
  padding-top: $margin-small
  padding-right: $margin-basic

// PLAYER

#vimeo-player
  position: relative
  height: 0
  overflow: hidden
  transition: padding-bottom $basic-animation-speed
  iframe, object, embed
    position: absolute
    top: 0
    left: 0
    width: 100%
    height: 100%

// SIDEBAR

.sidebar-section
  margin-bottom: $margin-small
  &:after
    content:"\2014"
    display: block
    margin-top: $margin-small

#search-input
  display: inline-block
  width: 50px
  border: 0
  border-bottom: dotted 1px $color-text-gray

// POSTS

.basic-post
  text-align: center
  color: $color-soft-white
  height: $basic-post-height
  background-color: $color-soft-black
  background-position: center center
  background-size: cover
  &:hover
    .basic-post-content
      display: none
    .basic-post-hover
      display: inline-block

.basic-post-title
  font-size: $font-size-heading

.basic-post-subtitle
  font-size: $font-size-subheading

.basic-post-hover
  display: none
  padding: $margin-small $margin-basic
  font-size: $font-size-subheading
  background-color: $color-soft-white
  opacity: 0.65
  color: $color-soft-black

// NEWS POST

.news-read-more
  .news-post-header:hover
    .news-header
      display: none
    .news-hover
      display: inline-block

.news-post-header
  text-align: center
  color: $color-soft-white
  height: $basic-post-height

.news-title
  font-size: $font-size-heading
  max-width: 800px
  margin: 0 auto

.news-hover
  display: none
  padding: $margin-small $margin-basic
  font-size: $font-size-subheading
  background-color: $color-soft-white
  opacity: 0.65
  color: $color-soft-black

.news-copy
  display: none
  margin: $margin-large 0

// PAGES

.page-header
  background-color: $color-light-gray

#page-title
  margin-left: $margin-basic
  padding-bottom: $margin-small

// DIRECTOR SINGLE

#director-biography
  display: none

#director-showreel, #director-archive
  margin-top: $margin-basic

#director-archive-tags
  padding-bottom: $margin-small

.filter-tag
  display: inline-block
  padding: $margin-small $margin-small 0 $margin-small
  font-size: $font-size-smaller

.director-showreel-video
  width: 33.333%

.director-archive-video
  width: 20%
  display: none

.director-archive-video, .director-showreel-video
  float: left
  position: relative
  &.active
    display: block
  .u-holder
    color: $color-soft-white
    text-align: center
    opacity: 0
    position: absolute
    top: 0
    left: 0
    transition: opacity $basic-animation-speed
    &:hover
      opacity: 1


// MEDIA QUERIES

@media screen and (max-width: 800px)

  #sidebar
    transform: translateX(-100%)
    &.open
      transform: translateX(0%)

  #sidebar-toggle
    width: 30px
    height: 30px
    top: $margin-small
    right: $margin-small
    position: fixed
    display: block
    background: none
    z-index: 999
    transform: rotate(0deg)
    &.rotate
      transform: rotate(90deg)

  #main-content
    padding-left: 0

@media screen and (max-width: 400px)

  #logo
    width: 50%

  #sidebar
    width: 100%